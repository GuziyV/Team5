<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" Click="StartDrawing" />
                    <MenuItem Header="_Open" />
                    <MenuItem Header="_Save" />
                </MenuItem>
                <MenuItem Header="_Shapes">
                </MenuItem>
                <MenuItem Header="_Save">
                </MenuItem>
            </Menu>
        </DockPanel>
        <Canvas Visibility="Collapsed" Grid.Row="1" Name="Main" MouseLeftButtonDown="MouseClick" Background="Transparent"/>
        <Grid Name="Hint" VerticalAlignment="Center" Grid.Row="1" Background="LightGray">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock>Select File -> New to start drawing</TextBlock>
                <TextBlock>Select File -> Open to open a canvas</TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
